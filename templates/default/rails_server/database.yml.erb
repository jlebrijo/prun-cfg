<%= node["environment"]%>:
  adapter: <%= (node.recipes.to_s.include? 'mysql2')? 'mysql2': 'postgresql' %>
  username: <%= node["db"]["user"] || 'root'%>
  password: <%= node["db"]["password"]%>
  database: <%= @db_name %>
  host: <%= (node["db"]["host"])? node["db"]["host"] : 'localhost'%>
  template: template0
